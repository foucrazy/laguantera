<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <description>Aplicaci√≥n de la guantera</description>
    <display-name>laguantera</display-name>
    <context-param>
        <param-name>org.apache.tiles.impl.BasicTilesContainer.DEFINITIONS_CONFIG</param-name>
        <param-value>
            /WEB-INF/classes/com/laguantera/config/globalTiles.xml,/WEB-INF/classes/com/laguantera/action/usuario/anonimoTiles.xml,/WEB-INF/classes/com/laguantera/action/usuario/logueadoTiles.xml,/WEB-INF/classes/com/laguantera/action/calculadora/calculadoraTiles.xml,/WEB-INF/classes/com/laguantera/action/vehiculo/vehiculoTiles.xml,/WEB-INF/classes/com/laguantera/action/galerias/galeriasTiles.xml,/WEB-INF/classes/com/laguantera/action/operaciones/operacionesTiles.xml
        </param-value>
    </context-param>
    <filter>
        <filter-name>struts2</filter-name>
        <filter-class>org.apache.struts2.dispatcher.FilterDispatcher</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>struts2</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <listener>
        <listener-class>org.apache.struts2.tiles.StrutsTilesListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.laguantera.util.CleanupListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.laguantera.util.SessionListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>CaptchaImg</servlet-name>
        <servlet-class>com.laguantera.servlet.StickyCaptchaServlet</servlet-class>
        <init-param>
            <param-name>captcha-width</param-name>
            <param-value>200</param-value>
        </init-param>
        <init-param>
            <param-name>captcha-height</param-name>
            <param-value>60</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>CaptchaAudio</servlet-name>
        <servlet-class>com.laguantera.servlet.StickyAudioCaptchaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>modeloVehiculo</servlet-name>
        <servlet-class>com.laguantera.action.calculadora.ModeloVehiculo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>marcaVehiculo</servlet-name>
        <servlet-class>com.laguantera.action.calculadora.MarcaVehiculo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CaptchaImg</servlet-name>
        <url-pattern>/stickyImg.png</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CaptchaAudio</servlet-name>
        <url-pattern>/audio.wav</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>modeloVehiculo</servlet-name>
        <url-pattern>/modeloVehiculo.ser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>marcaVehiculo</servlet-name>
        <url-pattern>/marcaVehiculo.ser</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <jsp-config>
        <jsp-property-group>
            <description>compilar jspf</description>
            <display-name>jspf</display-name>
            <url-pattern>*.jspf</url-pattern>
        </jsp-property-group>
    </jsp-config>
     <resource-ref>
        <res-ref-name>jdbc/laguantera</res-ref-name>              
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
</web-app>
