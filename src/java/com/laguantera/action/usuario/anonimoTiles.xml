                <item link="#w3c" value="laguantera.jsp.anonimo.plantillaBase.pie.w3c.texto" tooltip="laguantera.jsp.anonimo.plantillaBase.pie.w3c.descripcionEnlace"/>
            </put-list-attribute>
        </definition>
        
        <!--Plantillas Multiples-->
